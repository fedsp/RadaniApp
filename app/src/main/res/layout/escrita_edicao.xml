<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_edicao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="25sp"
        android:textColor="@color/azulEscuro"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/valor_anterior_edicao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/titulo_edicao"
        android:textSize="15sp"
        android:textColor="@color/cinzaEscuro"
        />

    <TextView
        android:id="@+id/label_edicao"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/valor_anterior_edicao"
        android:textSize="20sp"
        android:textColor="@color/cinzaEscuro"
        />

    <Spinner
        android:id="@+id/dropdown_valores"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@id/valor_anterior_edicao"
        />

    <Button
        android:id="@+id/mais"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/label_edicao"
        android:layout_toEndOf="@+id/valor_numerico_atual"
        android:background="@drawable/bot_mais_selector"/>

    <Button
        android:id="@+id/menos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/label_edicao"
        android:layout_toStartOf="@+id/valor_numerico_atual"
        android:background="@drawable/bot_menos_selector"/>

    <TextView
        android:id="@+id/valor_numerico_atual"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/label_edicao"
        android:textSize="40sp"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:textColor="@color/cinzaEscuro"
        />

</RelativeLayout>